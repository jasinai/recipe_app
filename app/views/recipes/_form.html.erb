<%= form_for(@recipe) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
  </div>

  <div>
    <%= f.label :preparations %>
    <%= f.text_area :preparations %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>